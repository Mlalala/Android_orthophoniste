        <activity android:label="@string/title_AudioToSyllablePositionPhono" android:name=".phonology.audioToSyllablePositionPhono.AudioToSyllablePositionPhonoMenuActivity" android:screenOrientation="portrait"></activity>
        <activity android:label="@string/title_AudioToSyllablePositionPhono" android:name=".phonology.audioToSyllablePositionPhono.AudioToSyllablePositionPhonoActivty" android:screenOrientation="portrait"></activity>


        <!-- Articulation -->
        <activity android:label="@string/title_arti" android:name=".articulation.DescriptionArtiActivity" android:screenOrientation="portrait"></activity>

        <activity android:label="@string/title_ArticulationLevel" android:name=".articulation.DescriptionArtiLevel" android:screenOrientation="portrait"></activity>

        <activity android:label="@string/title_ArticulationSerie" android:name=".articulation.DescriptionArtiSerie" android:screenOrientation="portrait"></activity>

