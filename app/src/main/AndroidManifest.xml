        <activity android:label="@string/title_SearchSyllableVisu" android:name=".visual.searchSyllableVisu.SearchSyllableVisuActivity" android:screenOrientation="portrait"></activity>
        <activity android:label="@string/title_SearchSyllableVisu" android:name=".visual.searchSyllableVisu.SearchSyllableVisuMenuActivity" android:screenOrientation="portrait"></activity>

        <!-- Memory -->
        <activity android:label="@string/title_memo" android:name=".memory.MemoryMenuActivity" android:screenOrientation="portrait"></activity>

    </application>

    <supports-screens
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:xlargeScreens="false"/>

    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

</manifest>